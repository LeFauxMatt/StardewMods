{
    "Changes": [
        {
            "LogName": "Cow Barn Overlay",
			"Action": "Load",
			"Target": "{{ModId}}/Overlays/Barn",
            "FromFile": "assets/overlays/{{TargetWithoutPath}}.png"
        },
        {
            "LogName": "Load Barn Animal Overlay",
            "Action": "EditData",
            "Target": "furyx639.SpritePatcher/Patches",
            "Entries": {
                "{{ModId}}/BarnOverlay": {
                    "Target": "Buildings/Barn",
                    "Area": {"X": 0, "Y": 0, "Width": 112, "Height": 112},
                    "DrawMethods": ["World", "Construction"],
                    "PatchMode": "Overlay",
                    "Priority": 10,
                    "Code": "
                        if (entity is not Building building) return false;
                        if (!building.GetIndoors().getAllFarmAnimals().Any(animal => animal.type.Value.Contains(`Cow`))) return false;
                        this.Path = $`{this.ModId}/Overlays/Barn`;
                        this.Area = new Rectangle(0, 0, 112, 112);
                        return true;
                    "
                }
            }
        }
    ]
}